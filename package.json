{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "A basic typescript app starter for newbies in 2019.",
  "main": "index.js",
  "volta": {
    "node": "16.14.0",
    "yarn": "1.19.2"
  },
  "scripts": {
    "build": "rimraf ./build && tsc && yarn copy",
    "copy": "copyfiles --flat src/index.hbs src/styles.css build",
    "start:dev": "nodemon",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@relmify/jest-fp-ts": "^1.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.0",
    "run-script-os": "^1.1.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@types/lz-string": "^1.3.34",
    "@types/prismjs": "^1.26.0",
    "@typescript/twoslash": "^3.1.0",
    "copyfiles": "^2.4.1",
    "eslint-plugin-jest": "^26.1.1",
    "fp-ts": "^2.11.8",
    "handlebars": "^4.7.7",
    "highlight-ts": "^9.12.1-2",
    "io-ts": "^2.2.16",
    "jest": "^27.5.1",
    "lz-string": "^1.4.4",
    "node-html-to-image": "^3.2.4",
    "prettier": "^2.5.1",
    "prismjs": "^1.27.0",
    "shiki-twoslash": "^3.0.2",
    "telegraf": "^4.7.0",
    "ts-adt": "^2.1.2",
    "ts-jest": "^27.1.3"
  }
}
